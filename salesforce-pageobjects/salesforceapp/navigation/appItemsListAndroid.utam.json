{
    "description": {
        "author": "Salesforce",
        "text": [
            "Selector: resourceId(\"com.salesforce.chatter:id/view_appLauncher\").",
            "Represents the Android list view of apps in 'App Launcher'.",
            "Look for an app by title and navigate to it."
        ]
    },
    "implements": "utam-salesforceapp/pageObjects/navigation/appItemsList",
    "platform": "native",
    "profile": [
        {
            "platform": [
                "android_phone",
                "android_tablet"
            ]
        }
    ],
    "exposeRootElement": true,
    "type": [
        "touchable"
    ],
    "elements": [
        {
            "name": "visibleAppItems",
            "type": [
                "clickable",
                "touchable"
            ],
            "selector": {
                "uiautomator": "resourceId(\"com.salesforce.chatter:id/app_label\")",
                "returnAll": true
            },
            "public": true
        },
        {
            "name": "appItemTitles",
            "type": [
                "actionable"
            ],
            "selector": {
                "uiautomator": "resourceId(\"com.salesforce.chatter:id/app_label\")",
                "returnAll": true
            },
            "public": true
        },
        {
            "name": "appItemDescs",
            "type": [
                "actionable"
            ],
            "selector": {
                "uiautomator": "resourceId(\"com.salesforce.chatter:id/app_description\")",
                "returnAll": true
            },
            "public": true
        },
        {
            "name": "appItemWithTitle",
            "type": [
                "clickable",
                "actionable"
            ],
            "nullable": true,
            "selector": {
                "uiautomator": "new UiScrollable(new UiSelector().scrollable(true)).scrollIntoView(resourceIdMatches(\".*app_label\").text(\"%s\"))",
                "args": [
                    {
                        "name": "item",
                        "type": "string"
                    }
                ]
            }
        },
        {
            "name": "visibleAppItemByTitle",
            "type": [
                "clickable",
                "actionable"
            ],
            "nullable": true,
            "public": true,
            "selector": {
                "uiautomator": "resourceIdMatches(\".*app_label\").text(\"%s\")",
                "args": [
                    {
                        "name": "item",
                        "type": "string"
                    }
                ]
            }
        }
    ],
    "methods": [
        {
            "name": "hasAppItemWithTitle",
            "compose": [
                {
                    "returnType": "boolean",
                    "element": "appItemWithTitle",
                    "matcher": {
                        "type": "notNull"
                    }
                }
            ]
        },
        {
            "name": "clickAppItemWithTitle",
            "compose": [
                {
                    "element": "appItemWithTitle",
                    "apply": "click"
                }
            ]
        }
    ]
}