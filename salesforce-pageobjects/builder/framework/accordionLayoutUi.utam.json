{
    "description": {
        "author": "Salesforce",
        "text": [
            "Selector: builder_framework-accordion-layout-ui",
            "Serves as a wrapper for accordion Page Object."
        ]
    },
    "beforeLoad": [
        {
            "apply": "waitFor",
            "args": [
                {
                    "type": "function",
                    "predicate": [
                        {
                            "element": "root",
                            "apply": "containsElement",
                            "args": [
                                {
                                    "type": "locator",
                                    "value": {
                                        "css": "lightning-accordion.slds-accordion"
                                    }
                                },
                                {
                                    "value": true
                                }
                            ]
                        }
                    ]
                }
            ]
        }
    ],
    "shadow": {
        "elements": [
            {
                "public": true,
                "name": "accordion",
                "type": "utam-lightning/pageObjects/accordion",
                "selector": {
                    "css": "lightning-accordion"
                }
            }
        ]
    }
}