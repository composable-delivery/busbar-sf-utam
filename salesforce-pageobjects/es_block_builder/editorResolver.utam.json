{
    "description": {
        "author": "Salesforce",
        "text": [
            "Selector: es_block_builder-editor-resolver",
            "Represents the block builder editor resolver component.",
            "The resolver determines whether to load the DAF or the Block Builder."
        ]
    },
    "root": true,
    "selector": {
        "css": "es_block_builder-editor-resolver"
    },
    "beforeLoad": [
        {
            "apply": "waitFor",
            "args": [
                {
                    "type": "function",
                    "predicate": [
                        {
                            "element": "root",
                            "apply": "containsElement",
                            "args": [
                                {
                                    "type": "locator",
                                    "value": {
                                        "css": ".es-block-builder,.daf"
                                    }
                                },
                                {
                                    "value": true
                                }
                            ]
                        }
                    ]
                }
            ]
        }
    ],
    "shadow": {
        "elements": [
            {
                "name": "blockBuilderUi",
                "type": "utam-es_block_builder/pageObjects/blockBuilderUi",
                "public": true,
                "selector": {
                    "css": "es_block_builder-block-builder-ui"
                }
            },
            {
                "name": "dynamicAuthoringForm",
                "type": "utam-es_block_builder/pageObjects/mcontentFormEditor",
                "public": true,
                "selector": {
                    "css": "es_block_builder-mcontent-form-editor"
                }
            },
            {
                "name": "brandEditorUi",
                "type": "utam-es_brand/pageObjects/brandEditorUi",
                "public": true,
                "selector": {
                    "css": "es_brand-brand-editor-ui"
                }
            }
        ]
    }
}