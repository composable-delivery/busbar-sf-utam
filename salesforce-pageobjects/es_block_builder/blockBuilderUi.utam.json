{
    "description": {
        "author": "Salesforce",
        "text": [
            "Selector: es_block_builder-block-builder-ui",
            "Represents the block builder UI component."
        ]
    },
    "beforeLoad": [
        {
            "apply": "waitFor",
            "args": [
                {
                    "type": "function",
                    "predicate": [
                        {
                            "element": "root",
                            "apply": "containsElement",
                            "args": [
                                {
                                    "type": "locator",
                                    "value": {
                                        "css": ".canvas-part"
                                    }
                                },
                                {
                                    "value": true
                                }
                            ]
                        }
                    ]
                }
            ]
        }
    ],
    "shadow": {
        "elements": [
            {
                "name": "primaryPanel",
                "type": "utam-es_block_builder/pageObjects/primaryPanel",
                "public": true,
                "selector": {
                    "css": "es_block_builder-primary-panel"
                }
            },
            {
                "name": "canvas",
                "type": "utam-es_block_builder/pageObjects/blockBuilderCanvas",
                "public": true,
                "selector": {
                    "css": "es_block_builder-block-builder-canvas"
                }
            },
            {
                "name": "propertyPanel",
                "type": "utam-es_block_builder/pageObjects/blockBuilderPropertyPanel",
                "public": true,
                "selector": {
                    "css": "es_block_builder-block-builder-property-panel"
                }
            }
        ]
    },
    "methods": [
        {
            "name": "waitForPrimaryPanel",
            "compose": [
                {
                    "apply": "waitFor",
                    "args": [
                        {
                            "type": "function",
                            "predicate": [
                                {
                                    "element": "primaryPanel"
                                }
                            ]
                        }
                    ]
                }
            ]
        },
        {
            "name": "waitForCanvas",
            "compose": [
                {
                    "apply": "waitFor",
                    "args": [
                        {
                            "type": "function",
                            "predicate": [
                                {
                                    "element": "canvas"
                                }
                            ]
                        }
                    ]
                }
            ]
        },
        {
            "name": "waitForPropertyPanel",
            "compose": [
                {
                    "apply": "waitFor",
                    "args": [
                        {
                            "type": "function",
                            "predicate": [
                                {
                                    "element": "propertyPanel"
                                }
                            ]
                        }
                    ]
                }
            ]
        }
    ]
}