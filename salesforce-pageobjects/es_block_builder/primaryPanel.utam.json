{
    "description": {
        "author": "Salesforce",
        "text": [
            "Selector: es_block_builder-primary-panel",
            "Represents the block builder primary panel component.",
            "The primary panel holds the palette, tree structure, and future configuration areas"
        ]
    },
    "root": true,
    "selector": {
        "css": "es_block_builder-primary-panel"
    },
    "beforeLoad": [
        {
            "apply": "waitFor",
            "args": [
                {
                    "type": "function",
                    "predicate": [
                        {
                            "element": "root",
                            "apply": "containsElement",
                            "args": [
                                {
                                    "type": "locator",
                                    "value": {
                                        "css": ".panel-area"
                                    }
                                },
                                {
                                    "value": true
                                }
                            ]
                        }
                    ]
                }
            ]
        }
    ],
    "shadow": {
        "elements": [
            {
                "name": "div",
                "selector": {
                    "css": "div"
                },
                "elements": [
                    {
                        "name": "paletteContainer",
                        "type": "utam-es_block_builder/pageObjects/blockBuilderPaletteContainer",
                        "public": true,
                        "selector": {
                            "css": "es_block_builder-block-builder-palette-container"
                        }
                    },
                    {
                        "name": "allButtonIcons",
                        "public": true,
                        "type": "utam-lightning/pageObjects/buttonIcon",
                        "selector": {
                            "css": "lightning-button-icon",
                            "returnAll": true
                        }
                    },
                    {
                        "name": "fieldPaletteContainer",
                        "type": "utam-es_data_field/pageObjects/blockBuilderFieldPaletteContainer",
                        "public": true,
                        "selector": {
                            "css": "es_data_field-block-builder-field-palette-container"
                        }
                    }
                ]
            }
        ]
    },
    "methods": [
        {
            "name": "waitForPalette",
            "compose": [
                {
                    "apply": "waitFor",
                    "args": [
                        {
                            "type": "function",
                            "predicate": [
                                {
                                    "element": "paletteContainer"
                                }
                            ]
                        }
                    ]
                }
            ]
        },
        {
            "name": "waitForFieldPalette",
            "compose": [
                {
                    "apply": "waitFor",
                    "args": [
                        {
                            "type": "function",
                            "predicate": [
                                {
                                    "element": "fieldPaletteContainer"
                                }
                            ]
                        }
                    ]
                }
            ]
        }
    ]
}